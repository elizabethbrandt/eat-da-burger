<h1>Eat-Da-Burger!!</h1>

<div class="container">

    <div class="menu">

        <h2>Burgers awaiting devourment:</h2>

        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burger-waiting devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>

    </div>

    <div class="menu">

        <h2>Burgers in my bellay!</h2>

        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burger-devoured}}
                {{/if}}
            {{/each}}
        </ul>

    </div>

</div>

<div class="order-up">

    <h2>What's next on the menu?</h2>

    <form>

        <div>

            <input type="text" id="newBurger">

            <button class="submit" type="submit">Order up!</button>

        </div>

    </form>

</div>